# A sample Gemfile
source "https://rubygems.org"

gem 'sinatra'
gem 'thin'
gem 'require_all'
gem 'activerecord', '5.2' #gives us access to the database
gem 'sinatra-activerecord' #gives acces to rake tasks
gem 'rake' #package that lets up quickly create files and folders, automated tasks


group :development do
	gem 'shotgun'
	gem 'pry'
	gem 'tux' #give us that interative console pre-loads our adatabase and ActiveRecord relationships
	gem 'sqlite3', '~> 1.3.6' #database adapter, allows our ruby app to communiate with a SQL database
end
